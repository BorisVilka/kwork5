<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/small02"
    tools:context=".MusicActivity">

    <LinearLayout
        android:id="@+id/Ll"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="149dp"
        android:background="@color/colorBackgroundBlack"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:padding="5dp">

            <Button
                android:id="@+id/start1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/play_foreground" />

            <TextView
                android:id="@+id/name_song1"
                android:layout_width="271dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70sp"
                android:text="Скромный и Ко - Грустная песенка кота"
                android:textSize="20sp"
                android:textColor="@color/colorLineSeekBar"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:padding="5dp">

            <Button
                android:id="@+id/start2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/play_foreground" />
            <TextView
                android:id="@+id/name_song2"
                android:layout_width="271dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70sp"
                android:text="Скромный и Ко - Песенка друзей"
                android:textSize="20sp"
                android:textColor="@color/colorLineSeekBar"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:padding="5dp">

            <Button
                android:id="@+id/start3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/play_foreground" />
            <TextView
                android:id="@+id/name_song3"
                android:layout_width="271dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70sp"
                android:text="Скромный и Ко - Песенка лисы"
                android:textSize="20sp"
                android:textColor="@color/colorLineSeekBar"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:padding="5dp">

            <Button
                android:id="@+id/start4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/play_foreground" />
            <TextView
                android:id="@+id/name_song4"
                android:layout_width="271dp"
                android:layout_height="60dp"
                android:layout_marginLeft="70sp"
                android:text="Скромный и Ко - Песенка петушка"
                android:textSize="20sp"
                android:textColor="@color/colorLineSeekBar"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="131sp"
                android:layout_height="71sp"
                android:background="@drawable/back_btn" />
        </RelativeLayout>

    </LinearLayout>

    <com.yandex.mobile.ads.banner.BannerAdView
        android:id="@+id/adView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></com.yandex.mobile.ads.banner.BannerAdView>

</LinearLayout>